#!/bin/sh

if [ "$#" -ne 1 ] || ! [ -e "$1" ]; then
  echo "Usage: $0 SOUNDFILES" >&2
  exit 1
fi

build_soundfile() {
  filepath=$1
  text=$2
  mkdir -p "$(dirname $filepath)"
  say -v Anna "$text" -o tmp/soundfile.aiff
  sox tmp/soundfile.aiff tmp/soundfile.wav pitch 800
  lame -b 128 tmp/soundfile.wav $filepath
  rm tmp/soundfile.aiff tmp/soundfile.wav
}

cat $1 | \
  grep -v "^#" | \
  while read line; do
    name="$(echo "$line" | cut -d "|" -f 1)"
    text="$(echo "$line" | cut -d "|" -f 2)"
    echo "Creating $name: '$text'"
    build_soundfile "$name" "$text"
  done

for i in {1..250}; do
  name=mp3/$(printf "%04d" $i).mp3
  echo "Creating $name: '$i'"
  build_soundfile "$name" "$i"
done
